<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/form_shape"
    android:layout_margin="6dp"
    android:padding="12dp"
    android:elevation="2dp"
    android:stateListAnimator="@null">

    <!-- Selection Indicator -->
    <View
        android:id="@+id/selection_indicator"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/selection_indicator"
        android:visibility="gone"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_med_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Medicamento"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginBottom="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/divider_line"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_med_dose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dosis: 500mg"
            android:textColor="@color/light_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_med_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 veces al día"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:background="@drawable/purple_rounded_box"
            android:padding="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/bell"
            android:layout_marginEnd="6dp"
            app:tint="@color/purple_accent" />

        <TextView
            android:id="@+id/tv_med_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hora: 08:00, 20:00"
            android:textColor="@color/light_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_med_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activo"
            android:textColor="@color/green_success"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_med_days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lunes, Miércoles, Viernes"
        android:textColor="@color/medium_gray"
        android:textSize="11sp"
        android:layout_marginTop="6dp" />

</LinearLayout>
